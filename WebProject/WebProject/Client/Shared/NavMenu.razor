<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Yacht Airbnb</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">

        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>

        <AuthorizeView>
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="reservations">
                    <span class="oi oi-calendar" aria-hidden="true"></span> Reservations
                </NavLink>
            </li>
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="ships">
                    <span class="oi oi-magnifying-glass" aria-hidden="true"></span> Ships/Search
                </NavLink>
            </li>
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="myYachts">
                    <span class="custom-icon iconify" data-icon="fontisto:yacht" style="width: 1.2rem; font-size: 1.3rem; margin-right: 0.8rem"></span> My Yachts
                </NavLink>
            </li>
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="/authentication/profile">
                    <span class="oi oi-cog" aria-hidden="true"></span> Settings
                </NavLink>
            </li>
        </AuthorizeView>
    </ul>
</div>

@code {
    private bool collapseNavMenu = false;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
