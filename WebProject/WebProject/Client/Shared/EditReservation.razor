@inject IJSRuntime JSRuntime
@inject IReservationService ReservationService

<h3>EditReservation</h3>

<EditForm Model="@r" OnSubmit="@HandleSubmit">
    <div class="form-group">
        <label>Id</label>
        <InputNumber @bind-Value="r.Id" class="form-control"></InputNumber>
    </div>
    <div class="form-group">
        <label>Price</label>
        <InputNumber @bind-Value="r.Price" class="form-control"></InputNumber>
    </div>
    <div class="form-group">
        <label></label>
        <InputDate @bind-Value="r.FromDate" class="form-control"></InputDate>
    </div>
    <div class="form-group">
        <label>Id</label>
        <InputDate @bind-Value="r.ToDate" class="form-control"></InputDate>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</EditForm>


@code {
    private Reservation r = new();

    async void HandleSubmit()
    {
        Console.WriteLine("loveeee");
        await JSRuntime.InvokeVoidAsync("console.log", r);

        await ReservationService.CreateReservation(r);
    }
}
